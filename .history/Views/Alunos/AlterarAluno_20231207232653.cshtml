@model AppDB.Models.Alunos
@{
    ViewData["Title"] = "Alterar aluno";

    <h1>Alterar Dados do Aluno</h1>

    <hr />

    <div class="row">
        <div class="row-md-4">
            <form asp-action="AlterarAluno">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome do Aluno: </label>
                    <input asp-for="Nome" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label asp-for="Turma" class="control-label">Turma do Aluno: </label>
                    <input asp-for="Turma" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label asp-for="Nota1" class="form-label">Primeira Nota: </label>
                    <input asp-for="Nota1" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label asp-for="Nota2" class="form-label">Segunda Nota: </label>
                    <input asp-for="Nota2" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label asp-for="Nota3" class="form-label">Terceira Nota: </label>
                    <input asp-for="Nota3" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label asp-for="Faltas" class="form-label">Quantidade de Faltas: </label>
                    <input asp-for="Faltas" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="submit" value="Alterar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Index">Voltar</a>
    </div>
}