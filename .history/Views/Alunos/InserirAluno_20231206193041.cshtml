@model Alunos
@{
    ViewData["Title"] = "Inserir Aluno";
}

<h1>Inserir novo aluno</h1>

<div>
    <div class="form-group">
        <label asp-for="@Model.Nome">Nome do Aluno: </label>
        <input asp-for="@Model.Nome">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Turma">Turma do Aluno: </label>
        <input asp-for="@Model.Turma">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nota1">Primeira Nota: </label>
        <input asp-for="@Model.Nota1" pattern="^\d+(,\d{1,2})?$">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nota2">Segunda Nota: </label>
        <input asp-for="@Model.Nota2">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nota3">Terceira Nota: </label>
        <input asp-for="@Model.Nota3">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Faltas">Quantidade de Faltas: </label>
        <input asp-for="@Model.Faltas">
    </div>
    <div class="form-group">
        <input type="submit" action="Inserir" value="Confirmar" class="btn btn-primary">
    </div>
</div>