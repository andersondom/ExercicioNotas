@model AppDB.Models.Alunos
@{
    ViewData["Title"] = "Alterar aluno";
}
<h1>Alterar Dados do Aluno</h1>

<hr />

<div class="row">

    <div class="row-md-4">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome do Aluno: </label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-control">
            <label asp-for="Turma">Turma do Aluno: </label>
            <input asp-for="Turma">
        </div>
        <div class="form-control">
            <label asp-for="Nota1">Primeira Nota: </label>
            <input asp-for="Nota1" class="decimal-input">
        </div>
        <div class="form-control">
            <label asp-for="Nota2">Segunda Nota: </label>
            <input asp-for="Nota2">
        </div>
        <div class="form-control">
            <label asp-for="Nota3">Terceira Nota: </label>
            <input asp-for="Nota3">
        </div>
        <div class="form-control">
            <label asp-for="Faltas">Quantidade de Faltas: </label>
            <input asp-for="Faltas">
        </div>
        <div class="form-control">
            <input type="submit" action="Alterar" value="Confirmar" class="btn btn-primary">
        </div>
    </div>
</div>